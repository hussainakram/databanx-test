h1 Listing posts
= link_to 'New Post', new_post_path, class: "btn btn-primary my-2"
table.table.responsive
  thead
    tr
      th Title
      th Body
      th Author
      th
      th
      th

  tbody
    - @posts.each do |post|
      tr
        td = post.title
        td = truncated_body(post.body)
        td = post.author.email
        td = link_to 'Show', post, class: "btn btn-sm btn-info"
        td = link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-warning"
        td = link_to 'Destroy', post, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-sm btn-danger"

br
= paginate @posts, theme: 'twitter-bootstrap-4'
